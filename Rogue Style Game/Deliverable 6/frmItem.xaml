<Window x:Class="Deliverable_6.frmItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deliverable_6"
        mc:Ignorable="d"
        Title="Item" Height="300" Width="500">
    <Grid>
        <Button x:Name="btnOk" Content="Yes"  Click="btnOk_Click" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="100" Margin="81,0,81,20" />
        <TextBlock x:Name="tbItem" Text="" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" TextWrapping="Wrap" Width="150" />
        <Button x:Name="btnNo" Content="No"  Click="btnNo_Click" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="100" Margin="81,0" />
    </Grid>
</Window>
